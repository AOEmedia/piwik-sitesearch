<div style="min-width: 930px">
	
	<div id="leftcolumn">
		<h2>Keywords</h2>
		{$keywords}
		
		<h2>Searches without results</h2>
		{$noResults}
	</div>
	
	<div id="rightcolumn">
		
		<h1 style="display:none">
			<span id="sitesearch_head"></span> 
			({$period})
		</h1>
		
		<h2>Evolution</h2>
		<div id="sitesearch_evolution" style="margin-bottom: 25px">
			{$evolution}
		</div>
		
		<div id="sitesearch_hide" style="display:none">
			
			<h2>Following Pages</h2>
			<div id="sitesearch_following_pages" style="margin-bottom: 25px"></div>
			
			<h2>Previous Pages</h2>
			<div id="sitesearch_previous_pages" style="margin-bottom: 25px"></div>
		
		    <h2>Refinements</h2>
		    <div id="sitesearch_refinements"></div>
			
		</div>
		
	</div>

</div>